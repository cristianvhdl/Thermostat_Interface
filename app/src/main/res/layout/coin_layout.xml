<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/single_control"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/saving_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center_horizontal"
        android:visibility="gone"
        android:padding="@dimen/control_padding"
        android:text="@string/increase_temp"
        android:textSize="@dimen/control_temp_size" />

    <TextView
        android:id="@+id/saving_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:textSize="@dimen/coin_text_size_normal"/>

    <TextView
        android:id="@+id/saving_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone"
        android:padding="@dimen/control_padding"
        android:text="@string/decrease_temp"
        android:textSize="@dimen/control_temp_size" />

</FrameLayout>
